@{
    ViewData["Title"] = "Welcome";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="min-height: 80vh; background: linear-gradient(45deg, #a8c0d9, #d0e1f9); animation: backgroundMove 5s infinite alternate;">
    <div class="card p-4 shadow-lg" style="max-width: 500px; width: 100%; opacity: 0;" id="welcomeCard">
        <div class="text-center">
            <i class="bi bi-person-circle" style="font-size: 4rem; color: #6c757d;"></i>
            <h2 class="mt-3 text-primary">Welcome, @ViewBag.Username</h2>
            <p class="text-muted">You have logged in successfully as <strong>@ViewBag.Role</strong>.</p>
            <a href="@Url.Action("Index", "Dashboard")" class="btn btn-primary mt-3">
                <i class="bi bi-house-door-fill"></i> Go to Dashboard
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            $('#welcomeCard').fadeTo(1500, 1); // Fade in effect
        });
    </script>
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .card {
            border-radius: 15px;
        }

        .btn-primary {
            background-color: #5bc0de;
            border-color: #5bc0de;
        }

            .btn-primary:hover {
                background-color: #31a5b8;
                border-color: #31a5b8;
            }

        .text-muted {
            font-size: 1.1rem;
        }

        .text-primary {
            color: #4a90e2;
        }

        @@keyframes backgroundMove {
            0%

        {
            background: linear-gradient(45deg, #a8c0d9, #d0e1f9);
        }

        100% {
            background: linear-gradient(45deg, #d0e1f9, #a8c0d9);
        }

        }
    </style>
}
