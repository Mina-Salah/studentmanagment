@model StudentManagement.Web.ViewModels.TeacherViewModel

<h2>Edit Teacher</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div><label>Name</label><input asp-for="FullName" /></div>
    <div><label>Email</label><input asp-for="Email" /></div>
    <div><label>Phone</label><input asp-for="PhoneNumber" /></div>
    <button type="submit">Save</button>
</form>
