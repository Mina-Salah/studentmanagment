@model IEnumerable<StudentManagement.Web.ViewModels.TeacherViewModel>

<h2>Teachers</h2>
<a href="/Teachers/Create">Create New</a>

<table class="table">
    <thead>
        <tr><th>Name</th><th>Email</th><th>Phone</th><th>Actions</th></tr>
    </thead>
    <tbody>
    @foreach (var teacher in Model)
    {
        <tr>
            <td>@teacher.FullName</td>
            <td>@teacher.Email</td>
            <td>@teacher.PhoneNumber</td>
            <td>
                <a href="/Teachers/Edit/@teacher.Id">Edit</a> |
                <form method="post" asp-action="Delete" asp-route-id="@teacher.Id" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
