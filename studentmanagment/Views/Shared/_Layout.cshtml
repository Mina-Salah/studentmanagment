	<script>
		// Add this script to your layout page
		document.addEventListener("DOMContentLoaded", function () {
			// Get all sidebar links
			const sidebarLinks = document.querySelectorAll('.sidebar-link');

			// Get the current URL path
			const currentPath = window.location.pathname;

			// Remove active class from all sidebar items
			document.querySelectorAll('.sidebar-item').forEach(item => {
				item.classList.remove('active');
			});

			// Add active class to the current page's sidebar item
			sidebarLinks.forEach(link => {
				// Extract the controller and action from the link's href attribute
				const linkUrl = link.getAttribute('href');

				// Check if this is an ASP.NET Core link with asp-controller and asp-action attributes
				const controller = link.getAttribute('asp-controller')?.toLowerCase();
				const action = link.getAttribute('asp-action')?.toLowerCase();

				if (controller && action) {
					// Build a path pattern to match against the current URL
					const pattern = new RegExp(`/${controller}/${action}`, 'i');

					if (pattern.test(currentPath)) {
						// This is the active link, add active class to its parent
						link.closest('.sidebar-item').classList.add('active');
					}
				} else if (linkUrl && currentPath.endsWith(linkUrl)) {
					// For regular href links, check if the path ends with the link URL
					link.closest('.sidebar-item').classList.add('active');
				}
			});
		});
	</script>
