@model StudentManagement.Web.ViewModels.UploadVideoViewModel

@{
    ViewData["Title"] = "Upload Video";
}

<h2 class="text-primary mb-4">Upload Course Video</h2>

<form asp-action="Upload" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="VideoFile" class="form-label"></label>
        <input asp-for="VideoFile" class="form-control" type="file" />
        <span asp-validation-for="VideoFile" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">اختر الكورس</label>
        <select asp-for="CourseId" class="form-control"
                asp-items="@(new SelectList(Model.Courses, "Id", "Title"))">
            <option value="">-- اختر كورس --</option>
        </select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">رفع الفيديو</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}