@model List<StudentManagement.Web.ViewModels.StudentFormViewModel>
@{
    ViewData["Title"] = "Student List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container mt-4">
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="fas fa-user-graduate me-2"></i>@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-end mb-4">
                <a asp-action="Create" class="btn btn-success">
                    <i class="fas fa-plus-circle me-1"></i> Add New Student
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center p-4">
                    <i class="fas fa-info-circle fa-2x mb-3"></i>
                    <h5>No students are currently registered</h5>
                    <p class="mb-0">Please add new students using the "Add New Student" button</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th scope="col">
                                    <i class="fas fa-user me-1 text-primary"></i>
                                    Name
                                </th>
                                <th scope="col">
                                    <i class="fas fa-calendar-alt me-1 text-primary"></i>
                                    Date of Birth
                                </th>
                                <th scope="col">
                                    <i class="fas fa-map-marker-alt me-1 text-primary"></i>
                                    Address
                                </th>
                                <th scope="col">
                                    <i class="fas fa-book me-1 text-primary"></i>
                                    Subjects
                                </th>
                                <th scope="col" class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr class="student-row">
                                    <td class="fw-bold">@student.Name</td>
                                    <td>@student.DateOfBirth.ToShortDateString()</td>
                                    <td>@student.Address</td>
                                    <td>
                                        @if (student.Subjects.Any(s => s.IsSelected))
                                        {
                                            <div class="mt-1">
                                                @foreach (var subject in student.Subjects)
                                                {
                                                    <span class="badge bg-light text-dark me-1">@subject.Name</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="badge bg-light text-muted">No Subjects</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-outline-info me-1" data-bs-toggle="tooltip" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a href="javascript:void(0);" class="btn btn-sm btn-outline-danger"
                                               onclick="showDeleteModal(@student.Id, '@student.Name')" data-bs-toggle="tooltip" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-trash-alt me-2"></i> Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Are you sure you want to delete the student "<strong id="studentNameToDelete"></strong>"?
                </div>
                <p class="text-muted">This action cannot be undone, and all data associated with this student will be deleted.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i> Cancel
                </button>
                <form id="deleteForm" asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="studentIdToDelete" name="id" value="" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Confirm Deletion
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script>
        // Function to show the delete modal
        function showDeleteModal(id, name) {
            // Set values in the modal
            document.getElementById('studentIdToDelete').value = id;
            document.getElementById('studentNameToDelete').innerText = name;

            // Get reference to the modal
            var myModal = new bootstrap.Modal(document.getElementById('deleteModal'));

            // Show the modal
            myModal.show();
        }

        // Ensure Bootstrap is loaded correctly
        document.addEventListener('DOMContentLoaded', function() {
            // Check if Bootstrap is defined
            if (typeof bootstrap === 'undefined') {
                console.error('Bootstrap is not defined. Please ensure Bootstrap library is correctly included.');
            }

            // Enable tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Hover effect
            var studentRows = document.querySelectorAll('.student-row');
            studentRows.forEach(function(row) {
                row.addEventListener('mouseenter', function() {
                    this.classList.add('bg-light');
                });
                row.addEventListener('mouseleave', function() {
                    this.classList.remove('bg-light');
                });
            });
        });
    </script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Tajawal', sans-serif;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            border-bottom: none;
            padding: 15px 20px;
        }

        .btn {
            border-radius: 5px;
            padding: 8px 20px;
            transition: all 0.3s;
        }

        .btn-primary {
            background-color: #3f6ad8;
            border-color: #3f6ad8;
        }

            .btn-primary:hover {
                background-color: #2d4eb1;
                border-color: #2d4eb1;
            }

        .btn-success {
            background-color: #3ac47d;
            border-color: #3ac47d;
        }

            .btn-success:hover {
                background-color: #2e9d64;
                border-color: #2e9d64;
            }

        .btn-sm {
            padding: 0.4rem 0.8rem;
        }

        .table {
            border-collapse: separate;
            border-spacing: 0;
            border-radius: 5px;
            overflow: hidden;
        }

            .table th {
                font-weight: 600;
                background-color: #f1f4f9;
                border-top: none;
                padding: 15px;
            }

            .table td {
                padding: 15px;
                vertical-align: middle;
            }

        .table-hover tbody tr:hover {
            background-color: rgba(63, 106, 216, 0.05);
        }

        .modal-content {
            border-radius: 10px;
            overflow: hidden;
            border: none;
        }

        .modal-header {
            border-bottom: none;
            padding: 15px 20px;
        }

        .modal-footer {
            border-top: none;
            padding: 15px 20px;
        }

        .alert {
            border-radius: 5px;
        }

        .btn-outline-info {
            color: #3f6ad8;
            border-color: #3f6ad8;
        }

            .btn-outline-info:hover {
                background-color: #3f6ad8;
                border-color: #3f6ad8;
                color: white;
            }

        .btn-outline-danger {
            color: #d92550;
            border-color: #d92550;
        }

            .btn-outline-danger:hover {
                background-color: #d92550;
                border-color: #d92550;
                color: white;
            }

        .badge {
            padding: 0.5em 0.8em;
            font-weight: 500;
            border-radius: 5px;
        }
    </style>
}
