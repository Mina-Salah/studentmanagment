@model IEnumerable<StudentManagement.Web.ViewModels.CourseViewModel>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Category</th>
            <th>Teachers</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center text-muted">
                    <i class="bi bi-exclamation-circle"></i> No courses found.
                </td>
            </tr>
        }
        else
        {
            foreach (var course in Model)
            {
                <tr>
                    <td>@course.Title</td>
                    <td>@course.Description</td>
                    <td>@course.StartDate.ToShortDateString()</td>
                    <td>@course.EndDate.ToShortDateString()</td>
                    <td>@course.CategoryName</td>
                    <td>@course.TeacherNames</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <form asp-action="Delete" asp-route-id="@course.Id"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
